<div id="seccion">
   <div id="seccion-titulo">
	<span class="titulo-seccion"><%= t 'titulos.contacto' %></span><br>
     <%= t 'parrafos.parrafo_contacto' %>  	
	</div>	
</div>

<div id="content-seccion">
	<div id="content-seccion2">
	<div id="box-servicios">
		<p><%= t 'parrafos.parrafo_contacto2' %> </p>	
		<div id="form-contacto">
			<%= form_for(@contact) do |f| %>
			  <% if @contact.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

			      <ul>
			      <% @contact.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="field_c">
			    <%= f.label :name %><br />
			    <%= f.text_field :name, :class => "home" %>
			  </div>
			  <div class="field_c">
			    <%= f.label :phone %><br />
			    <%= f.text_field :phone, :class => "home" %>
			  </div>
			  <div class="field_c">
			    <%= f.label :mail %><br />
			    <%= f.text_field :mail, :class => "home" %>
			  </div>
			  <div class="field_c">
			    <%= f.label :comment %><br />
			    <%= f.text_area :comment, :class => "home" %>
			  </div>
			  <div class="btn-contacto">
			    <%= f.submit 'Enviar', :class => 'button' %>
			  </div>
			<% end %>
			<div id="consultas-t">
				<%= t 'titulos.consultas_telefonicas' %>:<br>
				<%= t 'textos.horarios' %> 9:00 a 18:00<br>
				<%= t 'textos.fono' %> (56 2) 9357625 <br>
				<!--<%= t 'textos.celular' %> (56 9) - 78977444-->
			</div>
			</div>
    </div>
    <div id="imagen-servicios">
	<div id="imagenes">
        <img src="images/servicios/1.jpg" />
        <img src="images/servicios/2.jpg" />
        <img src="images/servicios/3.jpg" />
        <img src="images/servicios/4.jpg" />
        <img src="images/servicios/5.jpg" />
    </div>
    </div>


    </div>
 </div>